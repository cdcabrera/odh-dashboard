{
  "name": "odh-dashboard",
  "version": "1.0.0",
  "description": "Open Data Hub dashboard.",
  "author": "Red Hat",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendatahub-io/odh-dashboard.git"
  },
  "homepage": "https://github.com/opendatahub-io/odh-dashboard#readme",
  "bugs": {
    "url": "https://github.com/opendatahub-io/odh-dashboard/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "run-p -l build:*",
    "build:backend": "cd ./backend && npm install",
    "build:frontend": "cd ./frontend && npm install && npm run build",
    "dev": "run-p -l dev:*",
    "dev:backend": "cd ./backend && yarn start:dev",
    "dev:frontend": "cd ./frontend && yarn start:dev",
    "format": "prettier --write \"backend/**/*.js\" \"frontend/**/*.ts\" \"frontend/**/*.tsx\"",
    "make": "make",
    "make:build": "make build",
    "make:deploy": "make deploy",
    "make:login": "make login",
    "make:undeploy": "make undeploy",
    "make:push": "make push",
    "postinstall": "run-p postinstall:*",
    "postinstall:backend": "cd ./backend && yarn",
    "postinstall:frontend": "cd ./frontend && yarn",
    "start": "run-p start:*",
    "start:backend": "cd ./backend && yarn start",
    "start:frontend": "echo \"...available at ./frontend/public\"",
    "test": "run-s test:*",
    "test:backend": "cd ./backend && yarn test",
    "test:frontend": "cd ./frontend && yarn test",
    "test:fix": "run-s test:fix-backend test:fix-frontend",
    "test:fix-backend": "cd ./backend && yarn test:fix",
    "test:fix-frontend": "cd ./frontend && yarn test:fix"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}

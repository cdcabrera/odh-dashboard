{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "run-s build:prod",
    "build:analyze": "run-s build build:bundle-profile build:bundle-analyze",
    "build:bundle-profile": "webpack --config webpack.prod.js --profile --json > ./build/bundle.stats.json",
    "build:bundle-analyze": "webpack-bundle-analyzer ./build/bundle.stats.json",
    "build:clean": "rimraf ./build",
    "build:prod": "webpack --config ./config/webpack.prod.js",
    "start": "webpack serve --hot --color --progress --config ./config/webpack.dev.js",
    "test": "run-s test:type-check test:lint test:ci",
    "test:ci": "export CI=true; jest --collectCoverage",
    "test:clearCache": "jest --clearCache",
    "test:dev": "run-s test:type-check test:lint test:local",
    "test:lint": "eslint --ext .json,.js,.ts,.jsx,.tsx ./src",
    "test:lint-fix": "eslint --ext .json,.js,.ts,.jsx,.tsx ./src --fix",
    "test:local": "jest --watch",
    "test:type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@patternfly/patternfly": "^4.42.2",
    "@patternfly/react-core": "^4.50.2",
    "@patternfly/react-table": "^4.16.20",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.7",
    "classnames": "^2.2.6",
    "ky": "^0.24.0",
    "lodash-es": "^4.17.15",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.12",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "dotenv-webpack": "^4.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "imagemin": "^7.0.0",
    "jest": "^26.5.3",
    "mini-css-extract-plugin": "^1.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.2",
    "prop-types": "^15.6.1",
    "raw-loader": "^4.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "sass-loader": "^7.3.1",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^6.0.0",
    "terser-webpack-plugin": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.10.3",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  },
  "resolutions": {
    "**/eslint": "6.8.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "proxy": "http://localhost:8080"
}
